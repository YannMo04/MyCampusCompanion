            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aucun signalement"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
